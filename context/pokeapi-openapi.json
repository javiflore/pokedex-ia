  "paths": {
    "/pokemon": {
      "get": {
        "tags": ["Pokemon"],
        "summary": "List Pokémon",
        "description": "Returns a paginated list of Pokémon",
        "parameters": [
          {
            "$ref": "#/components/parameters/LimitParam"
          },
          {
            "$ref": "#/components/parameters/OffsetParam"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NamedAPIResourceList"
                }
              }
            }
          }
        }
      }
    },
    "/pokemon/{id}": {
      "get": {
        "tags": ["Pokemon"],
        "summary": "Get Pokémon by ID or name",
        "description": "Returns a single Pokémon",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID or name of the Pokémon",
            "schema": {
              "oneOf": [
                {
                  "type": "integer"
                },
                {
                  "type": "string"
                }
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Pokemon"
                }
              }
            }
          },
          "404": {
            "description": "Pokémon not found"
          }
        }
      }
    },
    "/pokemon/{id}/encounters": {
      "get": {
        "tags": ["Pokemon"],
        "summary": "Get Pokémon encounter locations",
        "description": "Returns location areas where Pokémon can be encountered",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
